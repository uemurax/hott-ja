% Inside the `\myEqReasoning` command, commands `\term`, `\by`, and
% `\rel` are available. The intended use is like this.
%
% \myEqReasoning{
% & \term{x + y} \\
% \rel{=}& \by{Commutativity} \\
% & \term{y + x}
% }

\usepackage{lwarp,longtable,my-math}

\NewDocumentCommand{\myEqReasoning}{+m}{%
  \begin{center}
    \let\term\myEqReasoning@term
    \let\by\myEqReasoning@by
    \let\rel\myEqReasoning@rel
    \setlength{\LTpre}{0pt}
    \setlength{\LTpost}{-20pt}
    \begin{longtable}{ll}
      #1
    \end{longtable}
  \end{center}}

\newcommand{\myEqReasoning@term}[1]{\myInlineMath{#1}}
\newcommand{\myEqReasoning@by}[1]{\qquad\{#1\}}
\newcommand{\myEqReasoning@rel}[1]{\myInlineMath{#1}}
